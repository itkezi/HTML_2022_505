	div { margin : 20px 0; padding :10px 0; }
	
	div label, div a {margin: 0 10px; }
	
	div.inline ul li, div.inline-block ul li {
		width : 120px; /* inline 블럭에는 적용 안됨 */
		 border-bottom: 1px solid red; 
		 padding: 10px 0; 
		 margin-right: 30px}
	div.inline ul li {
		display:inline; } /* 자기 자신이라 . 붙임*/
	div.inline-block ul li {
		display:inline-block; }
	
	.box-sizing { 
		width: 300px; 
		border: 1px solid; 
		margin:20px auto; 
		padding: 50px; }
	.box-sizing input {
		width: 100%; 
		height:35px; 
		border: 1px solid purple; 
		padding: 0; 
		box-sizing: border-box; 
		}
	.box-sizing li { margin: 10px 0 } /* li들 간의 상하 간격 */
	.box-sizing h3 { margin-top: 0; }
	
	.content-box { box-sizing: content-box }
	.border-box { box-sizing: border-box; }
	
	div.moon {
		padding:0;
		width:150px;
		height: 150px;
		background-color: #fbff05;
		margin: auto; 
		border-radius: 50%; /* 둥글게 만드려면 50% */
		box-shadow: 8px 5px 20px 6px gray; /* 가로 세로 흐림정도 번짐정도 색 */
		}
	
	div.shadow {
		width: 200px;
		height:100px;
		background-color: lightgreen;
		margin: 20px; 
		}
	
	div.out {
		box-shadow: 5px 5px 4px 2px green; 
		}
	div.in {
		box-shadow: 5px 5px 8px inset green; 
		}
	
	a.btn {
	margin-top: 50px;
		border: solid 1px gray
		
	}
	
	a { 
		text-decoration: none; 
		color: inherit; }
	input:focus {outline: none; /* 클릭했을 때 테두리 안두껍게 */
				border : 1px solid blue; /* 클릭하면 파란 테두리 */ }
	input[type=text] {padding: 5px 10px; border:1px solid rightgray}
	
	
</style>
